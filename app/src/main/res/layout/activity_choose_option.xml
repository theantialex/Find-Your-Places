<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseOptionActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum = '2'
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnNewRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/favourite1"
            android:padding="0dp"
            android:text="@string/btn_new_route"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/background_light"
            android:textSize="20sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnFavRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/favourite"
            android:padding="0dp"
            android:text="@string/btn_fav_route"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/background_light"
            android:textSize="20sp"
            android:typeface="serif" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>